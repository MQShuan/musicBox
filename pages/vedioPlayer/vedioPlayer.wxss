/* pages/vedioPlayer/vedioPlayer.wxss */
.vedio{
  width: 100%;
  position: fixed;
  top: 0;
}
.mv-info-container{
  margin-top: 225px;
}
.name{
  font-size: 22px;
  font-weight: 600;
}
.mv-info-subname-container{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
}
.mv-info-subname-container text{
  color:gray;
  font-size: 16px;
}
.mv-info-button-row{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  margin-top: 5%;
  height: 40px;
}
.mv-info-button{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 100%;
}
.mv-info-button{
  font-size: 12px;
  line-height: 14px;
}