/* pages/accountMusic/accountMusic.wxss */
.cintainer{
  width: 100%;
}
.user-info-row{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  align-items: center;
  height: 60px;
  flex-direction: row;
  border-bottom: 1rpx solid rgb(237,239,241);
}

.user-info-block{
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  margin-left: 3%;
}
.avater{
  border-radius: 75%;
  width: 50px;
  height: 50px;
}
.user-button{
  display: flex;
  align-items: center;
  flex:1;
  flex-wrap: nowrap;
}
.user-button-name{
  font-size: 14px;
}
.vip{
  width: 25px;
  height: 25px;
}
.become-vip{
  font-size: 22rpx;
  color: rgb(198, 47, 47);
  border-radius: 15%;
  border: 1rpx solid rgb(198, 47, 47);
  margin-right: 3%;
}
.become-vip button::after{
  border: 10rpx rgb(198, 47, 47);
}
.row-button{
  border-bottom:1rpx solid rgb(237,239,241);
}
.row-button-view{
  justify-content: flex-start;
  align-items: center;
  flex:1;
  display: flex;
  flex-wrap: nowrap;
}
.row-button-view-title{
  font-size: 30rpx;
}
.row-button-view-number{
  font-size: 24rpx;
  color:gray;
}
.song-list-header{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  background-color: rgb(237,239,241);
  width: 100%;
  height: 30px;
}
.song-list-header-left{
  flex:5;
  display: flex;
  align-items: center;
  background-color: rgb(237,239,241);
  font-size: 12px;
  height: 100%;
  color: gray;
}
.song-list-header-right{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(237,239,241);
  font-size: 15px;
  height: 100%;
}