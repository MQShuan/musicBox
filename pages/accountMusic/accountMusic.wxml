<!--pages/accountMusic/accountMusic.wxml-->
<view class='container'>
  <home-header/>
  <view class='user-info-row' >
    <view class='user-info-block'>
      <button class='avater'>
        <image></image>
      </button>
      <text>用户名字</text>
      <button class='vip'>
        <image></image>
      </button>
    </view>
    <button class='become-vip'>开通会员</button>
  </view>
  <view>
      <button class='row-button'>
        <view class='row-button-view'>
          <text>⭐</text>
          <text class='row-button-view-title'>我的电台</text>
          <text class='row-button-view-number'>(数量)</text>  
        </view>
      </button>
      <button class='row-button'>
        <view class='row-button-view'>
          <text>⭐</text>
          <text class='row-button-view-title'>我的收藏</text>
          <text class='row-button-view-number'>(数量)</text>  
        </view>
      </button>
      <button class='row-button'>
        <view class='row-button-view'>
          <text>⭐</text>
          <text class='row-button-view-title'>最近播放</text>
          <text class='row-button-view-number'>(数量)</text>  
        </view>
      </button>
    </view>
    <view>
      <view class='song-list-header'>
        <button bindtap='showSongList' class='song-list-header-left'>
          <text>创建的歌单(number)</text>
        </button>
        <button  class='song-list-header-right'>
          设置
        </button>
      </view>
      <view wx:if="{{songList}}">
        <row-button
          name="我喜欢的音乐"
          sub_name="18首，已下载10首"
        />
      </view>
    </view>
</view>