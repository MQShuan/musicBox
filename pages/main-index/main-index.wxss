.header-tabbar{
  display: flex;
  flex-wrap: nowrap;
  height: 50px;
  background-color:  rgb(198, 47, 47);
}
.select-tabbar-button{
  flex:1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(198, 47, 47);
  color: rgb(237,239,241);
  font-size: 15px;
}
.selected-tabbar-button{
  flex:1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(198, 47, 47);
  color: #fff;
  font-size: 15px;
}
.selected-tabbar-button text{
   border-bottom: 2px solid #fff;
   padding-bottom: 0;
}
.banner-image{
  
}
.banner-image-tag{
  position: absolute;
  right: 0;
  bottom: 0;
}
.bg-blue{
  background-color:aqua;
}
.bg-red{
  background-color: rgb(198, 47, 47);
}
.banner-image-tag text{
  font-size: 10px;
  color: #fff;
}
.gird-title{
  display: flex;
  width: 100%;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: nowrap;
  height: 30px;
  font-size: 14px;
  margin-left: 1%;
}
.gird-container{
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
}
.gird-col{
  flex: 0 0 auto;
  width: 31.33333333%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}
.gird-col text{
  font-size: 12px;
}
.gird-col image{
  border-radius: 3%;
}