/* pages/playListPage/playListPage.wxss */
.songlist-top{
  background-color: rgb(47, 47, 47);
  width: 100%;
}
.songlist-top-container{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  height: 400rpx;

}
.songlist-top-img{
  width: 200rpx;
  height: 200rpx;
  margin-left: 2%;
 
}
.songlist-top-info-container{
  flex-direction: column;
  display: flex;
  justify-content: space-around;
  height:200rpx; 
  padding-left: 3%;
}
.songlist-top-creator-container{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
}
.songlist-top-creator-container image{
  border-radius: 50%;
  width: 60rpx;
  height: 60rpx;
  margin-right: 2%;
}
.songlist-top-creator-container text{
  color: #fff;
  font-size: 24rpx;
}
.songlist-button{
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
  width: 40px;
  background-color: rgb(47, 47, 47);
}
.songlist-button-icon{
  font-size: 20px;
  line-height: 22px;
  color: #fff;
}
.songlist-button-text{
  line-height: 12px;
  font-size: 12px;
  color: #fff;
}
.songlist-button-row{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  height: 60px;
}
.songlist-button-block{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
}
.modal-button{
  display: flex;
  align-items: center;
  flex-wrap: nowrap;
  border-bottom: 1px solid rgb(237,239,241);
  width: 100%;
  height: 80rpx;
}
.modal-button-icon{
  margin-left: 3%;
  margin-right: 3%;
  color: rgb(198, 47, 47);
  font-size: 40rpx;
}
.modal-button-title{
  font-size: 30rpx;
}