.container{
  background: radial-gradient(circle, rgb(79,79,79), rgb(20,20,18));
  height: 100%;
  width: 100%;
}
.header-container{
  display: flex;
  width: 100%;
  align-items: center;
  height: 120rpx;
  flex-wrap: nowrap;
  background-color: rgb(33,33,32);
}
.header-center{
  flex:6;
  display: flex;
  flex-direction: column;
  height: 100%;
  align-items: flex-start;
  background-color: rgb(33,33,32);
}
.header-center-name{
  color: #fff;
  font-size: 36rpx;
}
.header-center-subname{
  color: rgb(237,239,241);
  font-size: 15rpx;
}
.header-button{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  background-color: rgb(33,33,32);
}