/* pages/search/search.wxss */
.container{
  margin-top: 48px;
}
.search-header{
  display: flex;
  width: 100%;
  height: 60px;
  background-color: rgb(198, 47, 47);
  flex-wrap: nowrap;
  padding-left: 2%;
  position: fixed;
  top: 48px;
  z-index: 9999;
}
.search-header-input{
  flex: 7;
  height: 100%;
  color:rgb(237,239,241);
}
.search-header-right-button{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgb(198, 47, 47);
}
.search-header-right-button text{
  color:#fff;
}
.hot-search-button-container{
  width: 100%;
  flex-wrap: wrap;
  display: flex;
}
.hot-search-button{
  border-radius: 50rpx;
  background-color: rgb(237,239,241);
  margin-left: 3%;
  margin-right: 3%;
  margin-top: 3%;
  padding-left: 5%;
  padding-right: 5%;
  height: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.hot-search-button-header{
  margin-left: 3%;
  font-weight: 700;
}