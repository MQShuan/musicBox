.container{
  display: flex;
}
.mask{
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  z-index: 9999;
  opacity:0.5;
  background-color: rgba(0,0,0,0.4);
  overflow: hidden;
}
.container-bottom{
  align-items: flex-end;
}
.container-center{
  align-items: center;
}
.modal-content{
  width: 100%;
  background-color: #fff;
  height: 50%;
  display: flex;
  position: fixed;
  top:50%;
  left: 0%;
  flex-direction: column;
  z-index: 10000;
  border-radius: 15px 15px 0 0;
}
.footer{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  height: 80rpx;
}
.footer button{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}