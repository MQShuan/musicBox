/* components/row-button/index.wxss */
@import"../../styles/iconfont.wxss";
.container{
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  height: 60px;
  border-bottom: 1rpx solid rgb(237,239,241);
}

.row-view-block-right-button{
  justify-content: center;
  align-items: center;
  width: 10%;
  display: flex;
  height: 100%;
}
.row-view-block-left{
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-start;
  flex:6;
  align-items: center;
  height: 100%;
}
.row-view-block-left-name{
  flex:4;
  display: flex;
  align-items: flex-start;
  flex-direction: column;
  margin-left: 3%;
}
.row-view-block-left-name text{
  overflow: hidden;
  white-space:nowrap;
}
.row-view-block-left-music-name{
  font-size: 14px;

}
.row-view-block-left-author-name{
  font-size: 10px;
  display: flex;
  color: gray;
}
.row-view-block-left-icon{
  display: flex;
  margin: auto 0;
  padding: 0;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.row-view-block-left-icon text{
  color: rgb(237,239,241);
  font-size: 12px;
  font-weight: 700;
}
.left-image-view{
  display: flex;
  align-items: center;
  height: 100%;
}
.left-image{
  width: 60px;
  height: 60px;
}
.icon{
  color:gray;
  font-size: 20px;
}