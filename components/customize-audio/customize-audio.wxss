/* components/customize-audio/customize-audio.wxss */
@import"../../styles/iconfont.wxss";
.button-row{
  display:flex;
  flex-wrap: nowrap;
  height: 60px;
  width: 100%;
  align-items: center;
}
.button-block{
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 60px;
  
}
.button-block button{
  background-color: rgb(100, 100,100);
  height: 100%;
}
.slider-row{
  display: flex;
  width: 100%;
  flex-wrap: nowrap;
  height: 30px;
  align-items: center;
}
.slider-view{
  height: 30px;
  flex: 6;
  align-items: center;

}
.slider-text{
  display: flex;
  color: gray;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  flex: 1;
  height: 100%;

}
.play-icon{
  color: #fff;
  font-size: 24px;
}
.music-container{
  
  align-items: center;
  justify-content: center;
}
.music-container-sv{
  height: 100%;
  display: flex;
  justify-content: center;
}

.music-lyric-row{
  display: flex;
  justify-content: center;
  align-items: center;
}
.music-lyric-select{
  color: rgb(237,239,241);
}
.music-lyric-selected{
  color: #fff;
}