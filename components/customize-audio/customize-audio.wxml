<!--components/customize-audio/customize-audio.wxml-->
<view>
    <scroll-view 
    style="height:{{scrollHeight}}px"
    class='music-container-sv'
    scroll-y='true'
    scroll-top="19"
    >
      <view wx:for="{{musiclyric}}" class='music-lyric-row'>
        <text class="{{}}">{{item[1]}}</text>
      </view>
  </scroll-view>
  <view class='slider-row'>
    <view  class='slider-text'>
        <text>{{currentMin}}:{{currentSec}}</text>
    </view>
    <view class='slider-view'>
      <slider 
        bindchange='changeDuration' 
        value="{{sliderDuration}}"
        block-size="12"
        max="200"
        activeColor="rgb(198, 47, 47)"
        backgroundColor="rgb(237,239,241)"
        ></slider>
    </view>
    <view class='slider-text'>
      <text>{{duration}}</text>
    </view>
  </view>
  <view class="button-row">
      <view class="button-block"><button><text>⭐</text></button></view>
      <view class="button-block"><button><text class='iconfont icon-md-skip-backward play-icon'></text></button></view>
      <view class="button-block"><button bindtap='audioState'>
        <text class="{{playState?'iconfont icon-play-circle play-icon':'iconfont icon-timeout play-icon'}}"></text></button></view>
      <view class="button-block"><button><text class='iconfont icon-md-skip-forward play-icon'></text></button></view>
      <view class="button-block"><button><text>⭐</text></button></view>
    </view>
</view>